{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(docker:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm run:*)",
      "Bash(pnpm:*)",
      "WebFetch(domain:*)",
      "Bash(osascript:*)",
      "Bash(curl:*)",
      "Bash(pnpm list:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .ai/scripts/validate-command.mjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 .ai/media/finish.mp3"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.1 .ai/media/need-human.mp3"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .ai/scripts/claude/statusline-ccusage.sh",
    "padding": 0
  },
  "feedbackSurveyState": {
    "lastShownTime": 1759175964291
  },
  "alwaysThinkingEnabled": true
}
